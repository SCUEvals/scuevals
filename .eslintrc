{
  "parser": "babel-eslint",
  "plugins": ["react"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
  },
 "extends": ["airbnb-base"],
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["__REDUX_DEVTOOLS_EXTENSION__"] }],
    "no-use-before-define": 0,
    "no-plusplus": 0,
    "no-nested-ternary": 0,
    "indent": [2, 2, { "flatTernaryExpressions": true, } ],
  },
  "globals": {
    "$": true
  }
}
